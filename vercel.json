{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "server/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/send-mail",
      "dest": "server/mailer.py"
    },
    {
      "src": "/(.*)",
      "dest": "server/index.js"
    }
  ]
}
